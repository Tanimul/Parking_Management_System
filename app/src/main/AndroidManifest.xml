<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parkingmanagementsystem">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".ParkingManagementApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ParkingManagementSystem">
        <activity
            android:name=".ui.auth.LoginManagementActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegistrationCarOwnerActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.activities.UsePromoCodeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.RegistrationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustNothing" />
        <activity
            android:name=".ui.intro.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_Api_key" />
    </application>

</manifest>